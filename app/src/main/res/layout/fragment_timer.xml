<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              tools:context="dev.randombits.ff.intervaltimer.TimerFragment"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical" android:id="@+id/timerLayout">

    <TextView
            android:fontFamily="monospace"
            android:text="@string/set"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textAlignment="center"/>

    <TextView
            android:fontFamily="monospace"
            android:text="1"
            android:textSize="64sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/setCount" android:textAlignment="center"/>

    <TextView
            android:fontFamily="@font/suez_one"
            android:text=""
            android:textSize="65sp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"

            android:layout_height="wrap_content" android:id="@+id/status" android:textAlignment="center"/>

    <TextView
            android:id="@+id/timeLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="monospace"
            android:text="0"
            android:textSize="150sp"
            android:textAlignment="center" android:textStyle="bold"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:gravity="center">

        <Button
                android:id="@+id/pauseBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/pause_circle_120"/>

        <Button
                android:id="@+id/resumeBtn"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/play_circle_120"/>

        <Button
                android:id="@+id/stopBtn"
                android:layout_marginStart="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/stop_circle_120"/>
    </LinearLayout>

</LinearLayout>
